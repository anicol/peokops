# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database
DATABASE_URL=postgres://postgres:postgres@db:5432/verityinspect

# Redis/Celery
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# AWS Settings
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=your-s3-bucket-name
AWS_S3_REGION_NAME=us-east-1
AWS_S3_CUSTOM_DOMAIN=your-cloudfront-domain.cloudfront.net

# JWT Settings
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ACCESS_TOKEN_LIFETIME=60
JWT_REFRESH_TOKEN_LIFETIME=1440

# Video Processing
MAX_VIDEO_SIZE_MB=100
SUPPORTED_VIDEO_FORMATS=mp4,mov,avi

# Retention Settings (days)
INSPECTION_MODE_RETENTION_DAYS=365
COACHING_MODE_RETENTION_DAYS=7

# AI Services
ENABLE_AWS_REKOGNITION=True
ENABLE_YOLO_DETECTION=False
ENABLE_OCR_DETECTION=False

# Twilio SMS Configuration
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+15551234567

# Micro-check Base URL (for magic links in SMS)
MICRO_CHECK_BASE_URL=http://localhost:3001

# AWS Rekognition Configuration
REKOGNITION_PPE_MIN_CONFIDENCE=80
REKOGNITION_OBJECTS_MIN_CONFIDENCE=70
REKOGNITION_MAX_LABELS=50

# Demo and Privacy Settings
DEMO_MODE=True
FACE_BLUR=False

# Frame Processing
FRAME_SAMPLING_FPS=2.5
MAX_FRAMES_PER_VIDEO=20

# Webhook Settings
WEBHOOK_TIMEOUT_SECONDS=30
WEBHOOK_RETRY_ATTEMPTS=3

# Development
FRONTEND_URL=http://localhost:3000

# Stripe Settings
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# Google Maps API (for Places Autocomplete)
VITE_GOOGLE_MAPS_API_KEY=your-google-maps-api-key
GOOGLE_PLACES_API_KEY=your-google-maps-api-key

# Google OAuth for Business Profile Integration
# Get credentials from: https://console.cloud.google.com/apis/credentials
# Steps:
#   1. Create OAuth 2.0 Client ID (Web application)
#   2. Enable: My Business Business Information API, My Business Account Management API
#   3. Add redirect URI: http://localhost:3000/integrations/google-reviews (exact match, no trailing slash)
#   4. Copy Client ID and Secret below
GOOGLE_OAUTH_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_OAUTH_CLIENT_SECRET=your-client-secret
GOOGLE_OAUTH_REDIRECT_URI=http://localhost:3000/integrations/google-reviews